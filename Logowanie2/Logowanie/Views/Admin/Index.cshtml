@model Logowanie.Models.AccountViewModels.RegisterViewModel
@using System.Web;
@using System.Web.WebPages.Razor
@{
    ViewData["Title"] = "Stwórz konto";
}
<font face="Times New Roman">
    <div align="center">
<h2><b>Stwórz nowe konto</b></h2>
        
    <font size="4"> 
<div class="row">
    <div class="col-sm-4 col-sm-push-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

            
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hasło"></label>
                <input asp-for="Hasło" class="form-control" />
                <span asp-validation-for="Hasło" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="col-sm-4 col-sm-push-3">
                @Html.DropDownListFor(x => x.Role, new List<SelectListItem>
     {
                         new SelectListItem() {Text = "Lekarz", Value="Lekarz"},
                         new SelectListItem() {Text = "Recepcjonistka", Value="Recepcjonistka"},
                    
     })
              
            </div>
            <br />
            <br />
            <button type="submit" class="btn btn-default">Zarejestruj</button>
        </form>
    </div>
</div>
       
<p>
    
    @ViewBag.token
</p>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}