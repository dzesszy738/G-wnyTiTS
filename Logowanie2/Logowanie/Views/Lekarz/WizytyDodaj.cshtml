@using Logowanie.Models
@model Wizyty
@{
    ViewData["Title"] = "WizytyDodaj";
}



@DateTime.Now





<form asp-controller="Lekarz" asp-action="WizytyDodaj" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="IdPacjent" />
    <input type="hidden" asp-for="IdWizyty" />
    <input type="hidden" asp-for="JestLek" />

    <input type="hidden" asp-for="DataWizyty" />
    <div class="form-group">
        <label asp-for="Opis"></label>
        <input asp-for="Opis" class="form-control" />
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Zalecenia"></label>
        <input asp-for="Zalecenia" class="form-control" />
        <span asp-validation-for="Zalecenia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Dodaj" class="btn btn-default" />
        </div>
    </div>

</form>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}