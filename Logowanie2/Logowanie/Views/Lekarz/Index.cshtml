@model IEnumerable<Pacjent>
    @{
    ViewData["Title"] = "Index";
    }
    <h2>Index</h2>
    <form asp-controller="Lekarz" asp-action="Index" method="get">
        <p>
            Pesel: <input type="text" name="SearchString">
            <input type="submit" value="Szukaj" />
        </p>
    </form>
    <table class="table">
        <tr>
            <th>
                PESEL
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                Imie
            </th>
            <th></th>
        </tr>
        @{


        foreach (var item in Model)
        {

            <tr>
                @if (item.Pesel != 0)
                {
                <td>
                    @Html.DisplayFor(modelItem => item.Pesel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwisko)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Imie)
                </td>
                <td>
                    <form asp-controller="Lekarz" asp-action="Wizyty" method="get">
                        <a asp-action="Wizyty" asp-route-id="@item.IdPacjent">Wyszukaj wizyte</a>
                    </form>
                    <form asp-controller="Lekarz" asp-action="WizytyDodaj" method="get">
                        <a asp-action="WizytyDodaj" asp-route-id="@item.IdPacjent">Dodaj wizyte</a>
                    </form>
                   
                </td>
                }
            </tr>

        }

        }
    </table>
