@model Logowanie.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h2>Zmień hasło</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

            <hr />

            <div class="form-group">
                <label asp-for="Hasło"></label>
                <input asp-for="Hasło" class="form-control" />
                <span asp-validation-for="Hasło" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Zmień</button>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}