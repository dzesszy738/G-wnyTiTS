@model ForgottPassword
@{
    ViewData["Title"] = "Zapomniałeś/aś hasła?";
}
<front face="Time New Roman">
    <div align="center">
        <h2><b>@ViewData["Title"]</h2></b>

        <form asp-controller="Account" asp-action="ChangePasswordMail" method="post" class="form-horizontal">
            <h4>Podaj swój adres email.</h4>
            <div class="row">
                <div class="col-sm-4 col-sm-push-4">



                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Wyślij</button>
                    </div>
                </div>
            </div>
        </form>
        </div>
    </front>

        @section Scripts {
            @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
        }




