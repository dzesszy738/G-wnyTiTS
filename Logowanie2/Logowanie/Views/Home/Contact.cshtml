@using Logowanie.Models
@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@model IEnumerable<Wizyty>
@{
    ViewData["Title"] = "Wizyty";
}
<front face="Time New Roman">
    <div align="center">
    <h2><b>Wizyty</b></h2>
        </div>
    <font size="4">
        <form asp-controller="Home" asp-action="Contact" method="get">
            <p>
                Wpisz datę:
                <div class="row">
                    <div class="col-md-3">
                        <input class="form-control" name="SearchString" />
                    </div>


<h2>Wizyty</h2>


<form asp-controller="Home" asp-action="Contact" method="get">
    <p>
        Data: <input type="text" name="SearchString">
        <input type="submit" value="Szukaj" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            Data Wizyty
        </th>
        <th>
            Opis
        </th>
        <th>
            Zalecenia
        </th>
        <th>
            Leki
        </th>
    </tr>

    @{


        foreach (var item in Model)
        {

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DataWizyty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Zalecenia)
        </td>
        <td>
            <form asp-controller="Home" asp-action="Privacy" >
                <a asp-action="Privacy" asp-route-idw="@item.IdWizyty" asp-route-id="@item.IdPacjent">Leki</a>
            </form>
        </td>
        
    </tr>

        }

    }
</table>
