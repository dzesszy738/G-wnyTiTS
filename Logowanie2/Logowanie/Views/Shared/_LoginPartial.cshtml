
@using Microsoft.AspNetCore.Identity
@using Logowanie.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using System.Security.Claims;


@if (SignInManager.IsSignedIn(User) )
{
    @if (User.HasClaim(ClaimTypes.Role, "Pacjent"))
    {

        <ul class="nav navbar-nav navbar-left">

            <a asp-area="" asp-controller="Home" asp-action="About" class="navbar-brand" style="color: #ffffff">Dane</a>
            <a asp-area="" asp-controller="Home" asp-action="Contact" class="navbar-brand" style="color: #ffffff">Wizyty</a>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="navbar-brand" style="color: #ffffff">Leki</a>

        </ul>
    }
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">

            <ul class="nav navbar-nav navbar-right">
                <li>


        <ul class="nav navbar-nav navbar-right">
            <li>

                <a asp-area="">Witaj @UserManager.GetUserName(User)</a>
            </li>
            <li>

                <a asp-area="" asp-action="ResetPassword">Zmień hasło</a>
            </li>

            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" style="color: #ffffff">Wyloguj się</button>
            </li>
        </ul>
    </form>
    


}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Zarejestruj się</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Zaloguj się</a></li>
    </ul>
}